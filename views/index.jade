extends layout

block header
  link(rel='stylesheet', href='/css/index.css')

block content
  div#fb-root
  script
    (function(d, s, id) {
      var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
      js = d.createElement('script'); js.id = id; js.async = true;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=165101643641091";
      d.getElementsByTagName('head')[0].appendChild(js);
    }(document, 'script', 'facebook-jssdk'));

  .container-narrow
    .masthead
      div.logo
      p.intro La informaci&oacute;n de  
        a(border='0', target='_blank', href='http://data.buenosaires.gob.ar') Buenos Aires Data 
        | transformada en 
        b Web API 
      div.share 
        div.fb-like(data-href='http://apicaba.com.ar', data-send='false', data-layout='button_count', data-width='120', data-show-faces='false', data-font='arial')
        a.twitter-share-button(href='https://twitter.com/share', data-url='http://apicaba.com.ar', data-text='Apicaba - La info de Buenos Aires Data transformada en Web API', data-size='small') Tweet
        script
          !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
        iframe.github-star(src='http://ghbtns.com/github-btn.html?user=pjnovas&repo=apicaba&type=watch&count=true', allowtransparency='true', frameborder='0', scrolling='0', width='110', height='20')
    hr.no-topmargin
    .jumbotron
      .splash
        a.object.cloudBA(border='0', title="Buenos Aires Data", target='_blank', href='http://data.buenosaires.gob.ar')
        canvas#sucker(width='170px', height='270px')
        .object.machine
        canvas#door(width='160px', height='120px')
        a.object.machine-cover(border='0', title='Código Fuente', target='_blank', href='https://github.com/pjnovas/apicaba')
        canvas#bazooka(width='170px', height='240px')
        a.object.cloudAPI(border='0', title="Documentación", target='_blank', href='/docs')
    hr
    .row-fluid
      .span12
        h3.surf Contenido actual de la Web API
        p.moreinfo
          a(border='0', target='_blank', href='/docs') Documentación
          |  | 
          a(border='0', target='_blank', href='https://github.com/pjnovas/apicaba') C&oacute;digo fuente
    .row-fluid
      .span12
        div.api-tree-holder
          div.col.categories
            h3 Categor&iacute;as
          div.col.groups
            h3 Grupos
          div.col.resources
            h3 Recursos
          div#resource-info(style="display: none;")
          div#api-tree
    hr
    .row-fluid
      .span12
        h3.surf Ejemplo de consumo
        iframe(style='width: 100%; height: 300px; border: solid 1px silver;', src='http://jsfiddle.net/pjnovas/jdv3d/embedded/', allowfullscreen='allowfullscreen', frameborder='0')
    hr
    .footer
      a.nolaborables(border='0', title="API de Feriados", target='_blank', href='http://nolaborables.info/')
      p.copyright 
        span.copy copyright © 2013 Pablo Novas -&nbsp;
        span.contactme
          span pjnovas
          span @
          span gmail.com

